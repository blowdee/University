    <script>
        var count = 0;
        var v = @Html.Encode(Model.TkId);
        function show(shown, hid, hid2){
            document.getElementById(shown).style.display = 'block';
            document.getElementById(hid).style.display = 'none';
            document.getElementById(hid2).style.display = 'none';
            document.getElementById('mnrdiv').style.display = 'none';
            document.getElementById('spdiv').style.display = 'none';
            document.getElementById('mtdiv').style.display = 'none';
            return false;
        }
        debugger;
        function set(v){
            if(v == 1)
                show('d1', 'd2', 'd3');
            else if(v == 3)
                show('d3', 'd2', 'd1');
            else show('d2', 'd3', 'd1');
        }
        function mes() {
            alert("Функція знаходиться в стадії розробки. Вибачте за незручності");
            return true;
        }

        function multiply(n, p) {
            debugger;
            var cnt = 0;
            if (p - '0' > 0 && p - '9' < 1) {
                var t = n;
                n = p;
                p = t;
            }
            if (n - '0' > 0 && n - '9' < 1) {
                n = parseInt(n);
                var ans = ["T(0, 1)", "J(1, 2, "], pos = count + 2;
                ans[1] = ans[1].concat((count + n + 4).toString()).concat(")");
                cnt += 1 + n;
                while (n > 1) {
                    ans.push("S(0)");
                    n--;
                }
                ans.push("S(2)");
                ans.push(("J(0, 0, ").concat(pos).concat(")"));
                ans.push("Z(1)");
                ans.push("Z(2)");
                cnt += 4;
            }
            else {
                var ans = [];
                ans.push(("J(1, 3, ").concat(count + 9).concat(")"));
                ans.push(("J(0, 2, ").concat(count + 6).concat(")"));
                ans.push("S(2)");
                ans.push("S(4)");
                ans.push(("J(0, 0, ").concat(count + 2).concat(")"));
                ans.push("Z(2)");
                ans.push("Z(3)");
                ans.push(("J(0, 0, ").concat(count + 1).concat(")"));
                ans.push("T(4, 0)")
                cnt += 9;
            }
            for (var i = count, j = 0; i < cnt + count; ++i, ++j)
                this.document.getElementById('mnrdiv').innerHTML += '</br>' + (i + 1) + ") " + ans[j];
            count += cnt;
            return true;
        }

        function del(n, p) {
            debugger;
            if (p - '0' > 0 && p - '9' < 1) {
                var t = n;
                n = p;
                p = t;
            }
            var cnt = 0;
            var ans = [];
            ans.push(("J(0, 2, ").concat(count + 6).concat(")"));
            n = parseInt(n);
            cnt += n + 1;
            while (n > 0) {
                ans.push("S(2)");
                n--;
            }
            ans.push("S(1)");
            ans.push(("J(0, 0, ").concat(count + 1).concat(")"));
            ans.push("T(1, 0)");
            ans.push("Z(1)");
            ans.push("Z(2)");
            cnt += 5;
            for (var i = count, j = 0; i < cnt + count; ++i, ++j)
                this.document.getElementById('mnrdiv').innerHTML += '</br>' + (i + 1) + ") " + ans[j];
            count += cnt;
            return true;
        }

        function add(n, p) {
            debugger;
            var cnt = 0;
            var ans = [];
            if (p - '0' > 0 && p - '9' < 1) {
                var t = n;
                n = p;
                p = t;
            }
            if (n - '0' > 0 && n - '9' < 1) {
                n = parseInt(n);
                cnt += n;
                while (n > 0) {
                    ans.push("S(0)");
                    n--;
                }
            }
            if(p == 'y' || n == 'y'){
                ans.push(("J(1, 2, ").concat(count + 5).concat(")"));
                ans.push("S(2)");
                ans.push("S(0)");
                ans.push(("J(0, 0, ").concat(count + 1).concat(")"));
                ans.push("Z(1)");
                ans.push("Z(2)");
                cnt += 6;
            }
            for (var i = count, j = 0; i < cnt + count; ++i, ++j)
                this.document.getElementById('mnrdiv').innerHTML += '</br>' + (i + 1) + ") " + ans[j];
            count += cnt;
            return true;
        }

        function minus(n, p) {
            debugger;
            var cnt = 0;
            var ans = [];
            if (p - '0' > 0 && p - '9' < 1) {
                var t = n;
                n = p;
                p = t;
            }
            if (n - '0' > 0 && n - '9' < 1) {
                n = parseInt(n);
                cnt += n;
                while (n > 0) {
                    ans.push("S(1)");
                    n--;
                }
            }
            ans.push(("J(0, 1, ").concat(count + 5 + cnt).concat(")"));
            ans.push("S(1)");
            ans.push("S(2)");
            ans.push(("J(0, 0, ").concat(count + 1 + cnt).concat(")"));
            ans.push("T(2, 0)");
            ans.push("Z(1)");
            ans.push("Z(2)");
            cnt += 7;
            for (var i = count, j = 0; i < cnt + count; ++i, ++j)
                this.document.getElementById('mnrdiv').innerHTML += '</br>' + (i + 1) + ") " + ans[j];
            count += cnt;
            return true;
        }

        function mnr(divid) {
            count = 0;
            var a = this.document.getElementById('mnr').value.toString();
            this.document.getElementById('mnrdiv').style = 'block';
            this.document.getElementById(divid).innerHTML = '</br>';
            var temp = "", op, temp1, flag = true;
            for (var i = 0; i < a.length; ++i) {
                if (a[i] == '+' || a[i] == '-' || a[i] == '*' || a[i] == '/') {
                    if (flag) {
                        flag = false;
                        temp1 = temp;
                        temp = "";
                    }
                    else if (!flag) {
                        if (op == '+')
                            add(temp1, temp);
                        else if (op == '*')
                            multiply(temp1, temp);
                        else if (op == '-')
                            minus(temp1, temp);
                        else del(temp1, temp);
                        temp1 = temp;
                        temp = "";
                    }
                    op = a[i];
                }
                else
                    temp += a[i];
                if (i == a.length - 1) {
                    if (op == '+')
                        add(temp1, temp);
                    else if (op == '*')
                        multiply(temp1, temp);
                    else if (op == '-')
                        minus(temp1, temp);
                    else del(temp1, temp);
                }
                }
            return true;
        }

        function sp(divid){
            var a = this.document.getElementById('sp').value;
            this.document.getElementById(divid).innerHTML = '</br><h3>Result<h3>';
            return true;
        }

        function mt(divid) {
            var a = this.document.getElementById('mt').value;
            this.document.getElementById(divid).innerHTML = a;
            return true;
        }
    </script>

